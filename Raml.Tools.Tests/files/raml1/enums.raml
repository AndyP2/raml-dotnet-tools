#%RAML 1.0 
title: My API With Types
types:
  Person:
    properties:
        firstname: string
        lastname: string
        country:
            type: string
            enum: [ usa, rus ]
        size:
            type: number
            enum: [ 1, 2, 3 ]
/persons:
  get:
    responses:
      200:
        body:
          application/json:
            type: Person